<% include partials/header.ejs %>
<div class="table-wrapper">
    <% if (product) {%>
        <table class="table table-hovered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Seller's Paypal</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td scope="row"><%= product.text.name %></th>
                    <td scope="row"><%= product.text.paypal ? product.text.paypal : '' %></td>
                    <!-- <td scope="row"><%= order.productName %></td> -->
                    
                </tr>
            </tbody>
        </table>
    <% } else { %>
        <p class="text-center">Could not load product data</p>
    <% } %>
</div>
</div>
</body>
</html>