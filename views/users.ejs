<% include partials/header.ejs %>

    <div class="container">
        <div class="row">
            <div class="col-2">
                <p class="normal-text">Sort By:</p>
            </div>
            <div class="col-10">
                
                <a class="btn btn-dark" href="/users/<%= "accountCreationDesc"%>">Account Creation (Descending)</a>
                <a class="btn btn-dark" href="/users/<%= "accountCreationAsc"%>">Account Creation (Ascending)</a>
                <a class="btn btn-dark" href="/users/<%= "appUsage"%>">App Usage</a>

                <p>Total Users: <%= users.length %></p>
            </div>
        </div>
    </div>
    <div class="table-wrapper">
        <% if (users.length > 0) {%>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Instagram</th>
                        <th scope="col">App Usage</th>
                        <th scope="col">Last Sign In</th>
                        <th scope="col">Image</th>
                        
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach((user, index) => { %>
                        <tr>
                            <td scope="row"><a href="/users/products/<%= user.userId %>"> <%= user.userId %> </a></th>
                            <td scope="row"><%= user.name %></td>
                            <td scope="row"><%= user.email %></td>
                            <td scope="row">
                                <a href="https://instagram.com/<%= user.insta %>">
                                <%= user.insta %>
                                </a>
                            </td>
                            <td scope="row"><%= user.appUsage %></td>
                            <td scope="row"><%= user.lastSignIn %></td>
                            <td><img src="<%= user.uri %>" class="rounded-circle player-img" alt=""></td>
                            
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No users found!</p>
        <% } %>
    </div>
</div>
</body>
</html>

